#include <iostream>

using namespace std;

int suma (int n);
int main()
{
    int n, s;
    
    cout << "Ingresar n: ";
    cin >> n;
    s = suma(n);
    
    cout << "El factorial de " << n << " es: " << s <<endl;

    return 0;
}
int suma (int n)
{
    int acum = 1;
    
    for (int i = 1 ; i <= n ; i++)
    {
        acum = acum * i;
    }
    return acum;
}
