#include <iostream>

using namespace std;
int sumadecimal(int n);
int main()

{
    int n;
    cout<<"El resultado de la suma decimal es:" <<sumadecimal(n) ;

    return 0;
}
   int sumadecimal(int n){
      n=10;
      int suma=0;
      
       for(int i=0; i<=n; i++) 
       {
           suma= suma+i;
       }
       return suma;
   }
